{
  "git.ignoreLimitWarning": true,
  "C_Cpp.clang_format_path": "/usr/bin/clang-format",
  "C_Cpp.default.cppStandard": "c++20",
  "editor.defaultFormatter": "ms-vscode.cpptools",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "terminal.integrated.profiles.windows": {
    "x64 Native Tools Command Prompt": {
      "path": "C:\\Windows\\System32\\cmd.exe",
      "args": [
        "/k",
        "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\VsDevCmd.bat"
      ],
      "icon": "terminal-cmd"
    }
  },
  "terminal.integrated.defaultProfile.windows": "x64 Native Tools Command Prompt",
  "terminal.integrated.automationProfile.windows": "x64 Native Tools Command Prompt",
  "cSpell.words": [
    "ASAN",
    "bazelisk",
    "buildsystems",
    "Buildx",
    "cmath",
    "ctest",
    "DBUILD",
    "DCMAKE",
    "DMLN",
    "DVCPKG",
    "fsanitize",
    "glcorearb",
    "GLES",
    "glfw",
    "GLSL",
    "gtest",
    "ldconfig",
    "libgl",
    "libgles",
    "libicu",
    "libmaplibre",
    "libunistring",
    "libuv",
    "maplibre",
    "mbgl",
    "modversion",
    "MSVC",
    "noreset",
    "OPENGL",
    "RAII",
    "rustc",
    "rustup",
    "Slint",
    "tlsv",
    "TSAN",
    "UBSAN",
    "unittests",
    "unpremult",
    "vcpkg"
  ],
  "files.associations": {
    "__tree": "cpp",
    "map": "cpp"
  },
  "chat.tools.terminal.autoApprove": {
    "nproc": true,
    "./build/maplibre-slint-example": true,
    "tee": true
  }
}
